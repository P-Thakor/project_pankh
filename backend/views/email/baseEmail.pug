doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title= subject

    include _style
  body
    table.body(role='presentation', border='0', cellpadding='0', cellspacing='0', width='100%')
      tbody
        tr
          td
          td.container
            .content
              // START CENTERED WHITE CONTAINER
              table.main(role='presentation', width='100%')
                tbody
                  // LOGO SECTION
                  tr
                    td(style='text-align:center; padding:20px;')
                      img(
                        src='https://res.cloudinary.com/dosqfitt3/image/upload/v1739289688/ighscswzdigd3gngltwb.png' 
                        alt='Logo' 
                        style='border-radius: 50%; max-width: 15%; height: auto; display: block; margin: 0 auto;'
                      )

                  // START MAIN AREA
                  tr
                    td.wrapper
                      table(role='presentation', border='0', cellpadding='0', cellspacing='0', width='100%')
                        tbody
                          tr
                            td
                              // CONTENT
                              block content

              // START FOOTER
              .footer
                table(role='presentation', border='0', cellpadding='0', cellspacing='0', width='100%')
                  tbody
                    tr
                      td.content-block
