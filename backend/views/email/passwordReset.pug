extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? No worries! OTP to reset your password is given below. Please click on the link below to reset your password.

  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') #{url}
  p If you didn't forget your password, please ignore this email!
