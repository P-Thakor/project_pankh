extends baseEmail

block content
  p Hi #{firstName},
  p Verify Your Email. Please click on the link below to Verify your email.

  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Verify Email
  p If you have already verified your email, please ignore this email!
